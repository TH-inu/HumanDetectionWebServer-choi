<script>
    function refreshData(section) {
        console.log("refreshed!");
        const config = {
            method: "post",
            headers: {'Content-Type': 'application/json'},
            body: {section: section}
        };
        fetch('/mainPage', config)
        .then(res => res.json())
        .then(data => {
            console.log(data);
        })
        .catch(error => console.log(error))
    }
    setInterval(refreshData, 1);
    setInterval(refreshData, 2);
    setInterval(refreshData, 3);
</script>