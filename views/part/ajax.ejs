<script>
    function updateGraph(data, graph) {
        // console.log(data['total_pred']);
        var plotData = dataProcessing(data);
        console.log(plotData);
        for (var i = 0; i < 20; i++) {
            graph.series[i].update((plotData[i]));
        }
        graph.redraw();
        console.log(data[0]['total_pred'])
        predictResult.innerText = data[0]['total_pred'];
        setTimeout()
    }
    function refreshData(section) {
        // console.log("refreshed!");
        const config = {
            method: "post",
            headers: {'Content-Type': 'application/json'},
            async: false,
            body: JSON.stringify({section: section})
        };
        fetch('/mainPage/getData', config)
        .then(res => res.json())
        .then(data => {
            console.log(data);
            // console.log(data);
            let graph;
            if (section == 1) graph = graph1;
            else if (section == 2) graph = graph2;
            else if (section == 3) graph = graph3;
            else if (section == 4) graph = graph4;
            updateGraph(data, graph);
        })
        .catch(error => console.log(error))
    }

    setInterval(func, 4*1000);

    function func() {
        refreshData(1);
        setTimeout(refreshData, 1*1000, 2);
        setTimeout(refreshData, 2*1000, 3);
        setTimeout(refreshData, 3*1000, 4);
    }
